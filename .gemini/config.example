# Gemini CLI Wrapper - Configuration File
# Copy this to .gemini/config to set defaults
# All settings here can be overridden by command-line flags

# =============================================================================
# MODEL SETTINGS
# =============================================================================

# Primary model (used first)
# PRIMARY_MODEL="gemini-3-pro-preview"

# Fallback model (used if primary fails)
# FALLBACK_MODEL="gemini-3-flash-preview"

# =============================================================================
# BEHAVIOR DEFAULTS
# =============================================================================

# Show verbose output (true/false)
# VERBOSE=false

# Maximum prompt length in characters (~1MB default)
# MAX_PROMPT_LENGTH=1000000

# Number of retries on API failure
# MAX_RETRIES=2

# =============================================================================
# CACHING
# =============================================================================

# Cache directory for responses
# CACHE_DIR=".gemini/cache"

# Auto-invalidate cache when files change (true/false)
# CACHE_AUTO_INVALIDATE=true

# =============================================================================
# CONTEXT SETTINGS
# =============================================================================

# History directory for chat sessions
# HISTORY_DIR=".gemini/history"

# Smart context file limit (max files to include)
# SMART_CTX_LIMIT=20

# =============================================================================
# OUTPUT PREFERENCES
# =============================================================================

# Default output format (text/json)
# OUTPUT_FORMAT="text"

# Always validate response format (true/false)
# VALIDATE_RESPONSE=false

# =============================================================================
# CLAUDE INTEGRATION
# =============================================================================

# Store last response for parsing (true/false)
SAVE_LAST_RESPONSE=true
LAST_RESPONSE_FILE=".gemini/last-response.txt"

# Token estimation (approximate tokens per character)
# TOKENS_PER_CHAR=0.25
